    <form class="search-form" id="searchForm">
      <input type="text" id="searchBar" placeholder="Buscar en el sitio..." />
      <button type="submit">Buscar</button>
    </form>

    <!-- Contenedor de resultados -->
    <ul id="results"></ul>
  </div>
